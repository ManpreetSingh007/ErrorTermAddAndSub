import java.util.Scanner;
public class ErrorScanner {
/*
 *Author Manpreet Singh 
 */
 public static void main(String args[]){ 
 Scanner x =new Scanner(System.in);
 System.out.println("Enter First value");
 double value1 = x.nextDouble();
 System.out.println("Enter Error Term");
 double errorterm1 = x.nextDouble();
 System.out.println("Enter Second value");
 double value2 = x.nextDouble();
 System.out.println("Enter Error Term");
 double errorterm2 = x.nextDouble();
 
 System.out.println("Enter The operation");
 String operation = x.next();
 
 if(operation.equals("sub")) {
 double sub1 = value1-value2;
 double error1 = errorterm1-errorterm2;
 System.out.println("Sub = " + sub1 + "±" + error1 );
 }
 else if(operation.equals("add")){
 double sum1 = value1+value2;
 double error2 = errorterm1+errorterm2;
 System.out.println("Sum = " + sum1 + "±" + error2 );
 }
 else {
	 System.out.println("Enter add or sub for result");
 }
 }}
 
